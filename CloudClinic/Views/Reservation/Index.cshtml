@model IEnumerable<CloudClinic.Models.Reservation>

@{
    ViewBag.Title = "Daftar Reservasi";
}

<h2>Daftar Reservasi</h2>
<p>
    @Html.ActionLink("Tambah Reservasi", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Pilihan Jadwal
        </th>
        <th>
            Pasien
        </th>
        <th>
            Dokter
        </th>
        <th>
            Tgl. Reservasi
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Jadwal.PilihanJadwal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pasien.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pengguna.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TglReservasi)
        </td>
@if (User.IsInRole("Admin"))
{
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReservationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ReservationId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ReservationId },
            new { onclick = "return confirm('Apakah anda yakin mendelete data ini ?');" })
        </td>
}
    </tr>
}

</table>
