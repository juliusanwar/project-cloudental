@model CloudClinic.Models.DataModel.BillingObat

@{
    ViewBag.Title = "Tambah";
}

<h2>Pemberian Obat</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Billing Obat</h4>
        <p>Halaman form ini ditujukan untuk pemberian obat kepada pasien</p>
        <hr />
        <div class="form-group">
            @if (ViewBag.Error == null)
            {
                <div class="alert alert-info">@ViewBag.Pesan</div>
            }
            else
            {
                <div class="alert alert-warning">@ViewBag.Error</div>
            }
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*<div class="form-group">
            @Html.LabelFor(model => model.PasienId, "Username :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-3">
                @Html.DropDownList("PasienId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PasienId, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.TglDatang,"Tgl. Periksa :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("date", DateTime.Now.ToShortDateString(), new { @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.TglDatang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiagnosisId, "Anamnesa :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-3">
                @Html.DropDownList("DiagnosisId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DiagnosisId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BarangId, "Pilihan Obat :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-3">
                @Html.DropDownList("BarangId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BarangId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Qty,"Qty :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-1">
                @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Harga,"Harga :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-2">
                @Html.EditorFor(model => model.Harga, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Harga, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tambah" class="btn btn-default" />
            </div>
        </div>
    </div>
    
}

