@model CloudClinic.Models.ViewModel.RoleViewModel
@{
    ViewBag.Title = "CreateRole";
}

<h2>Add Role</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "col-sm-3 control-label no-padding-right" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "col-sm-3" } }) &nbsp;
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-info" type="submit">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    Create
                </button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "GetAllRole")
</div>

