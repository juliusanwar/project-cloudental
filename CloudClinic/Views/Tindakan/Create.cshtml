@model CloudClinic.Models.Tindakan

@{
    ViewBag.Title = "Tambah Tindakan";
}

<h2>Tambah Tindakan</h2>
<p>Form ini ditujukan untuk menambah tindakan kepada pasien</p>
<div class="form-group">
    @if (ViewBag.Error == null)
    {
        <div class="alert alert-info">@ViewBag.Pesan</div>
    }
    else
    {
        <div class="alert alert-warning">
            <ul>
                @foreach (var err in ViewBag.Error)
                {
                    <li>@err</li>
                }
            </ul>
        </div>
    }
</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Tindakan</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NamaTindakan, htmlAttributes: new { @class = "col-sm-3 control-label no-padding-right" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.NamaTindakan, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5" } })
                @Html.ValidationMessageFor(model => model.NamaTindakan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
             @Html.LabelFor(model => model.JenisTindakanId, "Kategori", htmlAttributes: new { @class = "col-sm-3 control-label no-padding-right" })
            <div class="col-xs-5">
                @Html.DropDownList("JenisTindakanId", null, 
                    htmlAttributes: new { @class = "col-xs-10 col-sm-5" })
                @Html.ValidationMessageFor(model => model.JenisTindakanId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Harga, htmlAttributes: new { @class = "col-sm-3 control-label no-padding-right" })
            <div class="col-xs-1">
                @Html.EditorFor(model => model.Harga, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5" } })
                @Html.ValidationMessageFor(model => model.Harga, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Diagnosa, htmlAttributes: new { @class = "col-sm-3 control-label no-padding-right" })
            <div class="col-sm-9">
                @Html.TextAreaFor(model => model.Diagnosa, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5" } })
                @Html.ValidationMessageFor(model => model.Diagnosa, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-info" type="submit">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    Create
                </button>
            </div>
        </div>*@
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

