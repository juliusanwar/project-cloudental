@model IEnumerable<CloudClinic.Models.BillingJasa>

@{
    ViewBag.Title = "Daftar Billing Jasa";
}

<h2>Daftar Billing Jasa</h2>
@if (User.IsInRole("Dokter"))
{
<p>
    @Html.ActionLink("Checkout Billing Obat >>", "Create", "BillingObat", null, new { @class = "btn-btn-warning" })
</p>

<p>
    @Html.ActionLink("Tambah Billing", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            Nama Tindakan
        </th>
        <th>
            Anamnesa
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tindakan.Nama)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Transaction.Amnanesa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
@if (User.IsInRole("Dokter"))
{
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BilJasaId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BilJasaId },
            new { onclick = "return confirm('Apakah anda yakin mendelete data ini ?');" }) |
            @Html.ActionLink("Bayar >>", "Details", new { id = item.BilJasaId })
        </td>
}
    </tr>
}

</table>
