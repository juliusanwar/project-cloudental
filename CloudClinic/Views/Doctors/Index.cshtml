@{
    ViewBag.Title = "Setup Dokter";
}

<h2>Setup Dokter</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@(Html.Kendo().Grid<CloudClinic.Models.ViewModel.DoctorViewModel>().Name("grid").Columns(columns =>
{
    columns.Bound(d => d.DoctorId).Width(50);
    columns.Bound(d => d.UserName).Width(80);
    //columns.Bound(d => d.Password).Width(80);
    columns.Bound(d => d.Nama).Width(100);
    columns.Bound(d => d.Alamat).Width(120);
    columns.Bound(d => d.Telp).Width(100);
    columns.Bound(d => d.Email).Width(100);
    columns.Command(command => { command.Edit(); command.Destroy(); }).Width(160);
})
        .ToolBar(toolbar => toolbar.Create())
        .Editable(editable => editable.Mode(GridEditMode.PopUp))
        .Pageable()
        .Sortable()
        .Scrollable()
        .HtmlAttributes(new { style = "height:430px;" })
            .DataSource(dataSource => dataSource
            .Ajax()
            .PageSize(20)
            .Events(events => events.Error("error_handler"))
            .Model(model => model.Id(d => d.DoctorId))
                .Create(update => update.Action("EditingPopup_Create", "Doctors"))
                .Read(read => read.Action("EditingPopup_Read", "Doctors"))
                .Update(update => update.Action("EditingPopup_Update", "Doctors"))
                .Destroy(update => update.Action("EditingPopup_Destroy", "Doctors"))
        )
)

<script type="text/javascript">
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
        }
    }
</script>

<div class="form-group">
    @if (ViewBag.Error == null)
    {
        <div class="alert alert-info">@ViewBag.Pesan</div>
    }
    else
    {
        <div class="alert alert-warning">
            <ul>
                @foreach (var err in ViewBag.Error)
                {
                    <li>@err</li>
                }
            </ul>
        </div>
    }
</div>

