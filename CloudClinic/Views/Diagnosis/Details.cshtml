@model CloudClinic.Models.DataModel.Diagnosis

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="dvContainer">
    <h4>Diagnosis</h4>
    <input type="button" value="Print Rekam Diagnosis" onclick="window.print(); return false;" />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            User Name :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pasien.UserName)
        </dd>

        <dt>
            Tgl. Datang :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TglDatang)
        </dd>

        <dt>
            Anamnesa :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amnanesa)
        </dd>
        <dd>
            <table class="table">
                <tr>
                    <th>Tgl. Periksa</th>
                    <th>Anamnesa</th>
                    <th>Posisi Gigi</th>
                    <th>Tindakan</th>
                    <th>Harga</th>
                </tr>
                @foreach (var item in Model.BillingJasas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TglDatang)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Diagnosis.Amnanesa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gigi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tindakan.NamaTindakan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Harga)
                        </td>
                    </tr>
                }
                
            </table>
        </dd>
        <dd>
            <table class="table">
                <tr>
                    <th>Tgl. Pembelian</th>
                    <th>Anamnesa</th>
                    <th>Obat</th>
                    <th>Harga</th>
                    <th>Qty</th>
                    <th>Sub Total</th>
                </tr>
                @foreach (var item in Model.BillingObat)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TglDatang)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Diagnosis.Amnanesa)
                        </td>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Barang.NamaBarang)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Harga)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Qty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubTotal)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
