@model CloudClinic.Models.DataModel.Diagnosis

@{
    ViewBag.Title = "Create";
}

<h2>Tambah Diagnosis Pasien</h2>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Diagnosis Pasien</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PasienId, "Username :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-2">
                @Html.DropDownList("PasienId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PasienId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TglDatang,"Tgl. Datang :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBox("date", DateTime.Now.ToShortDateString(), new { @readonly = "readonly" })
                @*@Html.EditorFor(model => model.TglDatang, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.TglDatang, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.PenggunaId)

        <div class="form-group">
            @Html.LabelFor(model => model.PenggunaId, "Dokter :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBox("text", User.Identity.Name, new { @readonly = "readonly"})
                
                @Html.ValidationMessageFor(model => model.TglDatang, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Amnanesa,"Hasil Anamnesa :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Amnanesa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amnanesa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tambah" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
