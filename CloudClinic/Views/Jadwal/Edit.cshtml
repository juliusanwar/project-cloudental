@model CloudClinic.Models.Jadwal

@{
    ViewBag.Title = "Update Jadwal";
}

<h2>Update Jadwal</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Jadwal</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.JadwalId)

        @Html.HiddenFor(model => model.PenggunaId)

        <div class="form-group">
            @Html.LabelFor(model => model.TanggalJadwal, "Tgl. Jadwal", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.Kendo().DatePickerFor(model => model.TanggalJadwal)

                @*@Html.EditorFor(model => model.Hari, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.TanggalJadwal, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Sesi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <fieldset>
                    <legend>Pilih Sesi yang ingin dijadwalkan :</legend>
                    @if (User.Identity.Name.Equals("andisetiawan"))
                    {
                        <input type="hidden" name="Sesi" id="Time1" value="Time1" /><label for="Time1">8:00 - 8:30</label><br />
                        <input type="hidden" name="Sesi" id="Time2" value="Time2" /><label for="Time2">8:30 - 9:00</label><br />
                        <input type="hidden" name="Sesi" id="Time3" value="Time3" /><label for="Time3">9:00 - 9:30</label><br />
                        <input type="hidden" name="Sesi" id="Time4" value="Time4" /><label for="Time4">9:30 - 10:00</label><br />
                        <input type="hidden" name="Sesi" id="Time5" value="Time5" /><label for="Time5">10:00 - 10:30</label><br />
                    }
                    @if (User.Identity.Name.Equals("boudy"))
                    {
                        <input type="hidden" name="Sesi" id="Time6" value="Time6" /><label for="Time6">16:00 - 16:30</label><br />
                        <input type="hidden" name="Sesi" id="Time7" value="Time7" /><label for="Time7">16:30 - 17:00</label><br />
                        <input type="hidden" name="Sesi" id="Time8" value="Time8" /><label for="Time8">17:30 - 17:30</label><br />
                        <input type="hidden" name="Sesi" id="Time9" value="Time9" /><label for="Time9">17:30 - 18:00</label><br />
                        <input type="hidden" name="Sesi" id="Time10" value="Time10" /><label for="Time10">18:00 - 18:30</label><br />
                    }
                </fieldset>
                @Html.ValidationMessageFor(model => model.Sesi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ruang, "Ruang", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.RadioButtonFor(m => m.Ruang, "Ruang 1", new { id = "Ruang1" })
                <label for"Ruang1">Ruang 1</label>
                @Html.RadioButtonFor(m => m.Ruang, "Ruang 2", new { id = "Ruang2" })
                <label for"Ruang2">Ruang 2</label>
                                
                @Html.ValidationMessageFor(model => model.Ruang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
