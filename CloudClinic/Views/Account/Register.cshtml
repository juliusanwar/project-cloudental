@model CloudClinic.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-sm-3 control-label no-padding-right" })
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.UserName, new { @class = "col-xs-10 col-sm-5" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label no-padding-right" })
        <div class="col-sm-9">
            @Html.PasswordFor(m => m.Password, new { @class = "col-xs-10 col-sm-5" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 control-label no-padding-right" })
        <div class="col-sm-9">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-xs-10 col-sm-5" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label no-padding-right" })
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.Email, new { @class = "col-xs-10 col-sm-5" })
        </div>
    </div>
    @*<div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Register
            </button>
        </div>
    </div>*@
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
